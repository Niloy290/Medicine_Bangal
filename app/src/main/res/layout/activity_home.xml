                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="ডিসোপ্যান০.৫"
                            android:textColor="#063950"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
