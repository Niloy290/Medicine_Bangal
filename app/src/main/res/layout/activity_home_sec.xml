<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#88EAE1"
    tools:context=".Home_sec">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#0EA596">

                <Toolbar
                    android:id="@+id/bac_barSe"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:navigationIcon="@drawable/ic_baseline_arrow_back_ios_24"
                    tools:ignore="MissingConstraints">

                </Toolbar>


                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="সিরাপ"
                    android:textColor="#4A2978"
                    android:textSize="30dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:columnCount="2"
                android:rowCount="6">

                <androidx.cardview.widget.CardView
                    android:id="@+id/napSp"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/napa_srp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="নাপা"
                            android:textColor="#063950"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/fexo"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#FDFCFC"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/tuska_srp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="তুসকা প্লাস"
                            android:textColor="#063950"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/adoSp"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="57dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/adovas_srp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="এডোভাস"
                            android:textColor="#063950"
                            android:textSize="22sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/omiSp"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#FFF"
                    app:cardCornerRadius="40dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_gravity="center_horizontal"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="65dp"
                            android:layout_gravity="center_horizontal"
                            android:src="@drawable/omidon_srp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:text="অমিডন"
                            android:textColor="#063950"
                            android:textSize="24sp"
                            android:textStyle="bold" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </GridLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>